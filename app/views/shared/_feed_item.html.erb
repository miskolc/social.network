<li id="<%= feed_item.id %>">
    <div class="image">
        <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    </div>
    <div class="micropost_text_content">
        <span class="user">
            <%= link_to feed_item.user.name, feed_item.user %>
        </span>
        <span class="content"><%= safe_join( feed_item.content.split(/\n/) , "<br />".html_safe) %></span>
    </div>  

    <span class="timestamp">
        Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>

    <% if current_user == feed_item.user %>
        <%= link_to raw(%q[<i class="icon-pencil"></i>edit]) , edit_micropost_path(feed_item),
                                                               remote: true %>
        <%= link_to raw("<i class=\"icon-remove\"></i>delete"), feed_item, method: :delete,
                                                                data: {confirm: "You sure?"},
                                                                title: feed_item.content,
                                                                class: "delete_link",
                                                                remote: true %>
    <%end%>

</li>    
